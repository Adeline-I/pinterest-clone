{% extends 'layouts/base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profil</h1>

            <img src="{{ relative_path('https://img.icons8.com/stickers/200/000000/test-account.png') }}" alt="Image de profil de {{ app.user.fullName }}">

            <p class="lead">
                {{ app.user.email }}
            </p>

            <hr>

            <h2>
                {{ app.user.fullName }}
            </h2>

            <p>
                <small>Compte créé le {{ app.user.createdAt|date('d/m/Y') }}</small>
            </p>

            <p>
                <a href="{{ path('app_account_edit') }}">Modifier le compte</a> | 
                <a href="{{ path('app_account_change_password') }}">Changer le mot de passe</a>    
            </p>
        </div>
    </div>
{% endblock %}
